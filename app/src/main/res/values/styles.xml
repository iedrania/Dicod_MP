<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Used for Card Item titles-->
    <style name="Title">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--Used for body text-->
    <style name="Body">
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Used for labels-->
    <style name="Label">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Used only for Home greetings-->
    <style name="Headline">
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textSize">28sp</item>
    </style>

    <!--Used for Chat time-->
    <style name="Small">
        <item name="android:fontFamily">@font/quicksand_light</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>